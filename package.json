{
  "name": "mcr-black-parade",
  "version": "0.1.0",
  "description": "The Black Parade: Carry On - An immersive narrative experience inspired by My Chemical Romance",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
